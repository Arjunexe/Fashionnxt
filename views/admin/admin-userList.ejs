          </ul>
        </nav>
      </div> -->


   
      






    </section> <!-- content-main end// -->

</div>

<script>
  function changeUserStatus(userId, status) {

    $.ajax({
      url: '/admin/change_user_status/?id=' + userId + '&status=' + status,
      method: 'PUT',
      success(response) {
        location.reload()

      }
    })
  }
</script>